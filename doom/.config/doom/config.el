(defun my/revert-buffer-no-confirm ()
  "Revert buffer without confirmation."
  (interactive)
  (when (buffer-file-name)
    (revert-buffer :ignore-auto :noconfirm)))

(add-hook 'server-after-make-frame-hook
          (lambda ()
            (my/revert-buffer-no-confirm)))


